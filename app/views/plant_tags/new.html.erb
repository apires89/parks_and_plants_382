<div class="container">
  <div class="row justify-content-center">
    <div class="col">
      <h1>Add a tag for <%= @plant.name %></h1>

      <%= simple_form_for [ @plant, @plant_tag ] do |f| %>
        <%= f.input :tag, collection: Tag.all, input_html: { multiple: true }, include_hidden: false, as: :select %>
      <%= f.submit "Add tag", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
